@model IEnumerable<Radore.Web.Models.ProductDto>

<br />
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Ürün Listesi</h1>
		</div>
		
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Category Name
				</th>
				<th>
					Price
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.Name
					</td>
					<td>
						@item.CategoryName
					</td>
					<td>
						@((item.Price).ToString("c"))
					</td>
					
				</tr>
			}
		</tbody>
	</table>
</div>
